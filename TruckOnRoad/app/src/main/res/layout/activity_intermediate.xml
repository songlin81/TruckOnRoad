<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:fresco="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_intermediate"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context="com.chubbymobile.wwh.truckonroad.IntermediateActivity">

<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/my_image_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    fresco:placeholderImage="@drawable/promotion"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    fresco:backgroundImage="@color/VolvoAccent" />

    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="placeholder for text"
        android:textSize="20sp"/>

</RelativeLayout>